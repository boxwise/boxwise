{
  "plugins": ["eslint-plugin-import"],
  "extends": ["react-app","plugin:import/errors"],
  "env": {
    "jasmine": true
  },
  "rules": {
    "import/order": ["off"],
    "no-restricted-imports": [ "error",
      {
        "patterns": [
          /* don't allow relative imports that go up the tree more than one level */
          "../../**",
          /* don't allow imports of internal modules */
          "modules/*/*/**"
        ]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}